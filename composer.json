{
    "name": "legal-partners/debt-collection-email-handler",
    "description": "PHP Email Handler for Debt Collection System",
    "type": "library",
    "version": "1.0.0",
    "authors": [
        {
            "name": "Legal Partners",
            "email": "dev@legalpartners.co.za"
        }
    ],
    "require": {
        "php": ">=7.4",
        "phpmailer/phpmailer": "^6.8",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-openssl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "LegalPartners\\": "src/"
        }
    },
    "scripts": {
        "test": "phpunit tests/",
        "setup": [
            "php -r \"copy('config.php', 'config_local.php');\"",
            "echo 'Configuration file created. Please update config_local.php with your settings.'"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
